{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"strict": true,
		"outDir": "./dist",
		"rootDirs": ["src", "tests"],
		"baseUrl": "src",
  	"paths": { "@/*": ["*"] },
		"importHelpers": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src",
		"jest.config.js"
	],
	"exclude": [
		"node_modules"
	],
}